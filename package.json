  "author": "XRPL.Sale Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xrplsale/js-sdk/issues"
  },
  "homepage": "https://github.com/xrplsale/js-sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "xrpl": "^3.0.0"
